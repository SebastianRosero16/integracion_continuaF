# EditorConfig para mantener consistencia de c√≥digo
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{sh,bash}]
end_of_line = lf

[Makefile]
indent_style = tab
